# Configurações do Banco de Dados (PostgreSQL Remoto)
DB_HOST=seu_host_aqui
DB_USER=seu_usuario_aqui
DB_PASS=sua_senha_aqui
DB_NAME=nome_do_banco
DB_PORT=5432

# String de Conexão Completa (usada pelo Node.js)
DATABASE_URL=postgresql://usuario:senha@host:5432/banco

# Configuração da API
NODE_ENV=production
PORT=5000
FRONTEND_URL=seu_dominio.com.br

# Autenticação JWT
JWT_SECRET=sua_chave_jwt_secreta_aqui

# Google Maps / Places API (para workers de coleta automatizada)
GOOGLE_PLACES_API_KEY=sua_chave_google_places_aqui
GOOGLE_MAPS_API_KEY=sua_chave_google_maps_aqui
